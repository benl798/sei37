<h2>
  <em>
    <%= @work.title %>
  </em>
  (<%= @work.year.year %>)
  by
  <%= link_to @work.artist.name, artist_path(@work.artist.id) %>
</h2>

<%= link_to 'Edit Work', edit_work_path(@work.id) %>
|
<%= link_to 'Delete Work', work_path(@work.id), method: 'delete' %>

<p>
  <strong>Medium:</strong>
  <%= @work.medium %>
</p>

<p>
  <strong>Style:</strong>
  <%= @work.style %>
</p>

<% if @work.image.present? %>
  <%= image_tag @work.image, alt: @work.title, class: 'work' %>
<% end %>
